      scope.setExtras({ ...data, uiContext });
      
      // A√±adir informaci√≥n de usuario si existe
      if (user) {
        scope.setUser(user);
      }
      
      // Capturar el error
      Sentry.captureException(errorObj);
    });
    
    return errorObj;
  }, []);
  
  // Funci√≥n de limpieza de errores
  const clearError = useCallback(() => {
    setLastError(null);
  }, []);
  
  return {
    lastError,
    captureError,
    clearError,
  };
}
