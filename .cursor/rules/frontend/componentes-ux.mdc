    const isDisabled = disabled || loading;
    
    // Map size to padding and text size
    const sizeStyles = {
      sm: 'py-1.5 px-3 text-sm',
      md: 'py-2 px-4 text-base',
      lg: 'py-3 px-6 text-lg',
